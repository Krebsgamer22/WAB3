{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "node",
    "outDir": "dist-scripts",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["scripts/**/*", "src/lib/generate-template.ts"],
  "exclude": ["node_modules"]
}
