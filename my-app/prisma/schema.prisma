datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Athlete {
  id           Int             @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String    @unique
  birthdate    DateTime
  gender       Gender
  performances Performance[]
  proof        SwimmingProof?
}

model Performance {
  id          Int           @id @default(autoincrement())
  athlete     Athlete       @relation(fields: [athleteId], references: [id])
  athleteId   Int
  discipline  Discipline
  value       Decimal
  date        DateTime
  medal       MedalType?
  criteria    MedalCriteria @relation(fields: [discipline], references: [discipline])
}

model SwimmingProof {
  id         Int       @id @default(autoincrement())
  athlete    Athlete   @relation(fields: [athleteId], references: [id])
  athleteId  Int       @unique
  fileUrl    String
  uploadDate DateTime  @default(now())
}

model MedalCriteria {
  discipline   Discipline @unique
  minAge       Int
  maxAge       Int
  bronzeValue  Decimal
  silverValue  Decimal
  goldValue    Decimal
  performances Performance[]
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum MedalType {
  BRONZE
  SILVER
  GOLD
}

enum Discipline {
  AUSDAUER
  KRAFT
  SCHNELLIGKEIT
  TECHNIK
}
